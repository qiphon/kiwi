{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2015",
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "outDir": "built",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src/",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "types": ["node", "mocha"]
  },
  "exclude": ["node_modules", "packages", "built"]
}
